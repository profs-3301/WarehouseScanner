<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.goodswarehouse.scanner.presentation.screens.track.TrackViewModel.SkuType" />

        <import type="android.view.View" />

        <import type="me.tatarka.bindingcollectionadapter2.LayoutManagers" />

        <import type="androidx.recyclerview.widget.LinearLayoutManager" />

        <variable
            name="viewModel"
            type="com.goodswarehouse.scanner.presentation.screens.track.TrackViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:focusable="false"
        android:focusableInTouchMode="true">

        <!--QTY.-->
        <TextView
            android:id="@+id/txt_qty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="left"
            android:text="Qty of Kits:"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_qty">

            <RadioButton
                android:id="@+id/rb1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:enabled="@{viewModel.isQtyNormalModeBind}"
                android:padding="10dp"
                android:text="1"
                android:textColor="#fff" />

            <RadioButton
                android:id="@+id/rb2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:enabled="@{viewModel.isQtyNormalModeBind}"
                android:padding="10dp"
                android:text="2"
                android:textColor="#fff" />

            <RadioButton
                android:id="@+id/rb3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:enabled="@{viewModel.isQtyNormalModeBind}"
                android:padding="10dp"
                android:text="3"
                android:textColor="#fff"
                android:visibility="@{(viewModel.skuModeBind == SkuType.NORMAL || viewModel.skuModeBind == SkuType.SPECIFIC_C) ? View.VISIBLE : View.GONE}" />

            <RadioButton
                android:id="@+id/rb4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="@{viewModel.isQtyNormalModeBind}"
                android:padding="10dp"
                android:text="4"
                android:textColor="#fff"
                android:visibility="@{(viewModel.skuModeBind == SkuType.NORMAL || viewModel.skuModeBind == SkuType.SPECIFIC_C) ? View.VISIBLE : View.GONE}" />

        </RadioGroup>

        <!--for remove focus-->
        <EditText
            android:id="@+id/nonFocusView"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="parent" />

        <!--Phial Item No..-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/phial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:hint="Phial Item No.:"
            android:textSize="12sp"
            android:visibility="@{viewModel.phial1visibilityBind ? View.VISIBLE : View.GONE}"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radio_group">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_phial"
                style="@style/AppEditTextStyle"
                android:text="@={viewModel.phialBind}"

                app:addTextChangedListener="@{viewModel.phialTextChangeListener}"
                app:isKeyboardEnabled="@{false}"
                app:isScannerKeyDoneEnabled="@{false}" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:onClick="@{() -> viewModel.clearPhial()}"
            android:padding="16dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:visibility="@{viewModel.phial1visibilityBind ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/phial"
            app:layout_constraintRight_toRightOf="parent"
            app:tint="#E91E63" />

        <!--Phial Item No2..-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/phial2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:hint="Phial Item No2.:"
            android:textSize="12sp"
            android:visibility="@{viewModel.phial2visibilityBind ? View.VISIBLE : View.GONE}"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phial">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_phial2"
                style="@style/AppEditTextStyle"
                android:text="@={viewModel.phial2Bind}"

                app:addTextChangedListener="@{viewModel.phial2TextChangeListener}"
                app:isKeyboardEnabled="@{false}"
                app:isScannerKeyDoneEnabled="@{false}" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:onClick="@{() -> viewModel.clearPhial2()}"
            android:padding="16dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:visibility="@{viewModel.phial2visibilityBind ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/phial2"
            app:layout_constraintRight_toRightOf="parent"
            app:tint="#E91E63" />

        <!--RM SHIPPING Track Label / (trackingId) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/track"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:hint="RM SHIPPING Track Label:"
            android:textSize="12sp"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phial2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_track"
                style="@style/AppEditTextStyle"
                android:enabled="@{viewModel.isTrackEnabledBind}"

                android:text="@={viewModel.trackBind}"
                app:addTextChangedListener="@{viewModel.trackTextChangeListener}"
                app:isKeyboardEnabled="@{false}"
                app:isScannerKeyDoneEnabled="@{false}" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:onClick="@{() -> viewModel.clearTrack()}"
            android:padding="16dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:layout_constraintBottom_toBottomOf="@id/track"
            app:layout_constraintRight_toRightOf="parent"
            app:tint="#E91E63" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="@{viewModel.debugTextBind}"
            android:textColor="@color/red"
            android:textSize="26sp"
            android:textStyle="bold"
            android:visibility="@{viewModel.isDebugMode ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toTopOf="@id/qtySwitch"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/track"
            tools:text="SPECIFIC_A" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="left"
            android:text="@{viewModel.debugRequestBind}"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/track" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="left"
            android:text="@{viewModel.debugResponseBind}"
            android:textColor="#EC2424"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/btn_clear"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <Switch
            android:id="@+id/qtySwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="32dp"
            android:checked="@{!viewModel.isQtyNormalModeBind()}"
            android:onCheckedChanged="@{viewModel::onQtyModeChanged}"
            android:text="Freeze the last QTY value"
            android:textColor="@color/white"
            android:theme="@style/SwitchStyle"
            app:layout_constraintBottom_toTopOf="@id/btn_clear"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorPrimary"
            android:ems="8"
            android:onClick="@{() -> viewModel.clear()}"
            android:text="Clear"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorPrimary"
            android:ems="8"
            android:onClick="@{() -> viewModel.verification()}"
            android:text="Submit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>